@model BeersList.Data.DTOs.BreweriesDTO.BreweriesPostDTO
@{
    ViewData["Title"] = "Create";
}

<div class="container my-4">
    <div class="row mb-3">
        <h3>Create</h3>
    </div>
    <div class="row"> 
        <form method="post">
            <div class="mb-3">
                <label asp-for="Name"></label>
                <input asp-for="Name"  class="form-control" />
            </div>
            <div class="mb-3">
                <label asp-for="Country"></label>
                <input asp-for="Country" class="form-control" />
            </div>

            <button type="submit" class="btn btn-success mb-3" style="width: 100%;">Create</button>
            <a class="btn btn-danger" style="width: 100%" asp-controller="Breweries" asp-action="Index">Back to the list</a>
        </form>
    </div>
</div>