@model IEnumerable<BeersList.Data.DTOs.BreweriesDTO.BreweriesGetDTO>
@{
    ViewData["Title"] = "Index";
}

<div class="container mt-4">

    <partial name="_Notifications"></partial>
    <div class="row my-3">
        <div class="col-6">
            <h3>Breweries</h3>
        </div>
        <div class="col-6 text-end">
            <a class="btn btn-success" asp-controller="Breweries" asp-action="Create"><i class="bi bi-plus-circle"></i></a>
        </div>
    </div>
    <div class="row">
        <table class="table table-bordered table-hover table-striped">

            <thead>
                <tr class="text-center">
                    <th>Name</th>
                    <th>Country</th>
                    <th>Actions</th>
                </tr>
            </thead>

            <tbody>

                @foreach (var brewery in Model)
                {
                    <tr class="text-center">
                        <td>@brewery.Name</td>
                        <td>@brewery.Country</td>
                        <td>
                            <a class="btn btn-success" asp-controller="Breweries" asp-action="Edit" asp-route-id="@brewery.Id"><i class="bi bi-pencil-square"></i></a>
                            <a class="btn btn-danger" asp-controller="Breweries" asp-action="Delete" asp-route-id="@brewery.Id"><i class="bi bi-eraser-fill"></i></a>
                        </td>
                    </tr>
                }

            </tbody>

        </table>
    </div>
</div>


